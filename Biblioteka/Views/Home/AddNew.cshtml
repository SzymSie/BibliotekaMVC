@model Biblioteka.Models.Book

<form asp-controller="Book" asp-action="AddBook" method="post">
    <div>
        <label asp-for="Title">Title</label>
        <input asp-for="Title" />
    </div>
    <div>
        <label asp-for="Author">Author</label>
        <input asp-for="Author" />
    </div>
    <div>
        <label asp-for="ISBN">ISBN</label>
        <input asp-for="ISBN" />
    </div>
    <div>
        <button class="btn btn-info" type="submit">Add</button>
    </div>
</form>